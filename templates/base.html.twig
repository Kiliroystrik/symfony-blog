<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Blogger.io
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link
		rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>
	<body>
		<header>
			<div class="logo">
				<a href="{{ path('home') }}">Blogger.io</a>
			</div>

			{% if  is_granted('ROLE_USER') %}
				<nav>
					<a href="{{path('post')}}">Articles</a>
					{# <a href="https://localhost:8000/admin">admin</a> #}
					<a href="{{path('category')}}">Categories</a>
					{% if  is_granted('ROLE_USER') %}
						<a href="{{path('add-category')}}">Créer une catégorie</a>
						<a href="{{path('add-post')}}">Créer un article</a>
					{% endif %}
					<a href="https://localhost:8000/logout">Logout</a>

					<div class="avatar">
						<img src="{{ asset('uploads/avatar/' ~ app.user.avatar) }} " alt="profile">
						<p>
							{{app.user.firstname}}
						</p>
					</div>


				</nav>
			{% else %}
				<nav>
					<a href="{{path('post')}}">Articles</a>
					<a href="{{path('category')}}">Categories</a>
					<a href="https://localhost:8000/register">Inscription</a>
					<a href="{{path('login')}}">Login</a>
				</nav>
			{% endif %}


		</header>

		<main>
			<div class="container">
				<div class="img"></div>
				{% block main %}{% endblock %}
			</div>
		</main>

		<footer>
			<nav>
				<a href="#">Ze foo tèr</a>
				<a href="#">Ze foo tèr</a>
				<a href="#">Ze foo tèr</a>
				<a href="#">Ze foo tèr</a>
				<a href="#">Ze foo tèr</a>
				<a href="#">Ze foo tèr</a>
				<a href="#">Ze foo tèr</a>
			</nav>
		</footer>
	</body>
</html>
