{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}

	{% block main %}
		<section>
			<h2>Tout les Posts !</h2>
			<article>

				{% for post in posts %}
					<div class="card">
						<h3>
							{{ post.title }}
						</h3>
						<p>
							{{post.content|length > 50 ? post.content|slice(0, 230) ~ '...' : post.content | raw}}
						</p>

						<a href="/post/{{post.id}}">lire</a>

					</div>
				{% endfor %}

			</article>
		</section>
	{% endblock %}

{% endblock %}
